@model ErrorViewModel

@{
	ViewData["Title"] = "Error";
}

<!-- preloader area start -->
<div id="preloader">
	<div class="loader"></div>
</div>
<!-- preloader area end -->
<!-- error area start -->
<div class="error-area ptb--100 text-center">
	<div class="container">
		<div class="error-content">
			<i class="fa fa-meh-o" style="font-size:100px"> 404!</i>
			<p>Ooops! Something went wrong .</p>
			<p>@Model.ErrorMessage</p>
			<a class="mt-4 btn btn-link" asp-controller="Home" asp-action="Index">Back to Dashboard</a>
		</div>
	</div>
</div>
<!-- error area end -->