@{
    ViewData["Title"] = "Access Denied";
    Layout = "/Views/Shared/_LayoutIdentity.cshtml";
}
<div class="error-area ptb--100 text-center">
    <div class="container">
        <div class="error-content">
            <i class="ti-na"></i>
            <h2 class="mt-5">Access denied!</h2>
            <p>The page you are trying to access had been restricted</p>
            <p>Please refer to IMS administrator</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger mt-3 mb-3"><div class="fa fa-home mr-1"></div>Back to home</a>
        </div>
    </div>
</div>