@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "/Views/Shared/_LayoutIdentity.cshtml";
}

<!-- login area start -->
<div id="preloader">
    <div class="loader"></div>
</div>
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-6 mt-5 mb-5">
            <div class="card">
                <form method="post">
                    <div class="card-body">
                        <div class="text-center mt-3">
                            <i class="fa fa-key key-icon"></i>
                            <h4 class="mt-4">Reset password</h4>
                            <p class="mt-2">Please enter your new password</p>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <input asp-for="Code" type="hidden" />
                        <input asp-for="UserID" type="hidden" />

                        <div class="form-group mt-5  mx-4">
                            <label asp-for="Password" class="form-label">New Password</label>
                            <input asp-for="Password" style="border-radius:12px" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." autofocus />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4  mx-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm new password</label>
                            <input asp-for="ConfirmPassword" style="border-radius:12px" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mt-4 mb-4  mx-4">
                            <button class="w-100 btn btn-primary" style="border-radius:12px" type="submit">Save password</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}