@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="success-area ptb--100 text-center">
    <div class="container">
        <div class="success-content">
            <i class="fa fa-check-circle-o"></i>
            <h2>Password changed!</h2>
            <p>Your password has changed successfully</p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-light mt-2 mb-3">Back to Sign in</a>
        </div>
    </div>
</div>